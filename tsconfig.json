{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2015"],
    "module": "commonjs",
    "outDir": "./built",
    // "allowJs": true,
    "target": "es5",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "paths": {
      "config": ["./config"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "config",
    "bin"
  ]
}

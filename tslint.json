{
  "extends": ["tslint:recommended", "tslint-config-standard"],
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "object-literal-sort-keys": false,
    "semicolon": [true, "never"],
    "interface-name": [true, "never-prefix"],
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": [
        "debug",
        "info",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    }
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}